<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fl.web.dao.qm.ICensorShipItemDao">
    <resultMap type="TCensorShipItem" id="censorItemMap">
        <result property="id" column="id"/>
        <result property="orderNo" column="order_no"/>
        <result property="censorNo" column="censor_no"/>
        <result property="itemNo" column="item_no"/>
        <result property="matnr" column="matnr"/>
        <result property="maktx" column="maktx"/>
        <result property="norms" column="norms"/>
        <result property="unit" column="unit"/>
        <result property="maktl" column="maktl"/>
        <result property="maktlName" column="maktlName"/>
        <result property="num" column="num"/>
        <result property="unqualifiedNum" column="unqualified_num"/>
        <result property="qualifiedNum" column="qualified_num"/>
        <result property="qualityType" column="quality_type"/>
        <result property="batchNo" column="batch_no"/>
        <result property="generationDate" column="generation_date"/>
        <result property="validityDate" column="validity_date"/>
        <result property="manufacturer" column="manufacturer"/>
        <result property="createBy" column="create_by"/>
        <result property="createDate" column="create_date"/>
        <result property="status" column="status"/>
        <result property="orderItemId" column="order_item_id"/>
    </resultMap>


    <!-- 	保存数据 -->
    <insert id="saveCensorItemList" parameterType="java.util.List">
        insert into censorship_item
        (id,order_no,censor_no,censor_id,order_item_id,item_no,maktl,matnr,maktx,norms,unit,num,unqualified_num,qualified_num,quality_type,
        batch_no,generation_date,validity_date,manufacturer,create_by,create_date,status)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.orderNo},
            #{item.censorNo},
            #{item.censorId},
            #{item.orderItemId},
            #{item.itemNo},
            #{item.maktl},
            #{item.matnr},
            #{item.maktx},
            #{item.norms},
            #{item.unit},
            #{item.num},
            #{item.unqualifiedNum},
            #{item.qualifiedNum},
            #{item.qualityType},
            #{item.batchNo},
            #{item.generationDate},
            #{item.validityDate},
            #{item.manufacturer},
            #{item.createBy},
            #{item.createDate},
            #{item.status})
        </foreach>
    </insert>

    <select id="getCensorShipItemByNo" resultMap="censorItemMap" parameterType="java.lang.String">
        SELECT
            t.id,
            t.order_no,
            t.censor_no,
            t.item_no,
            t.matnr,
            t.maktx,
            t.norms,
            t.unit,
            t.maktl,
            mt.name maktlName,
            t.num,
            ifnull(t.unqualified_num,0) unqualified_num,
            ifnull(t.qualified_num,0) qualified_num,
            t.quality_type,
            t.batch_no,
            t.generation_date,
            t.validity_date,
            t.manufacturer,
            t.create_by,
            t.create_date,
            t.status
        FROM
            censorship_item t
            left join mara_type mt on t.maktl = mt.maktl
        WHERE
            t. status != '003'
        AND t.censor_no =#{_parameter}
        order by t.item_no
    </select>

</mapper>