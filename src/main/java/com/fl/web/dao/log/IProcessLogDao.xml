<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fl.web.dao.log.IProcessLogDao">

    <resultMap type="TProcessLog" id="processLogMap">
        <result property="id" column="id"/>
        <result property="orderNo" column="order_no"/>
        <result property="orderStatus" column="order_status"/>
        <result property="description" column="description"/>
        <result property="reason" column="reason"/>
        <result property="realname" column="realname"/>
        <result property="createBy" column="create_by"/>
        <result property="createDate" column="create_date"/>
    </resultMap>

    <insert id="saveProcessLog" parameterType="TProcessLog">
        insert into process_log (id,order_no,order_status,description,reason,realname,create_by,create_date) values
            (#{id},#{orderNo},#{orderStatus},#{description},#{reason},#{realname},#{createBy},#{createDate})
    </insert>

    <insert id="saveProcessLogBatch" parameterType="java.util.List">
        insert into process_log
        (id,order_no,order_status,description,reason,realname,create_by,create_date)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},#{item.orderNo},#{item.orderStatus},#{item.description},#{item.reason},#{item.realname},#{item.createBy},#{item.createDate})
        </foreach>
    </insert>

    <select id="getProcessLogList" resultMap="processLogMap" parameterType="java.lang.String">
        select t.id,t.order_no,t.order_status,t.description,t.reason,t.realname,t.create_by,t.create_date
        from process_log t
        where t.order_no= #{_parameter}
        order by t.create_date desc
    </select>

    <delete id="deleteProcessLogBatch" parameterType="java.util.List">
        delete from process_log where order_no in
        <foreach collection="list" item="orderNo" index="index" open="(" close=")" separator=",">
            #{orderNo}
        </foreach>
    </delete>

</mapper>